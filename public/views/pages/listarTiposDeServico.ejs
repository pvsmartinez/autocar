<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
<header>
    <% include ../partials/header %>
</header>
<main>
    <div class="row">
        <div class="col-xs-2 col-sm-4 col-md-10">
            <h2>Lista de Tipos de Serviço AutoCar</h2>
        </div>
    </div>
    <div class="tabela-funcionarios">
        <div class="row">
            <div class="col-xs-2 col-sm-4 col-md-10">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Duração</th>
                        <th>Ação</th>
                    </tr>
                    </thead>
                    <%    locals.tipos.forEach(function(tipo) {
                    %>

                    <tr>
                        <td><%= tipo.nome %></td>
                        <td>R$ <%= tipo.preco.toFixed(2) %></td>
                        <td><%= tipo.duracao %></td>
                        <td><a href="/editarTipoDeServico?id=<%= tipo.id %>">Editar</a>
                    </tr>
                    <%
                    });
                    %>
                </table>
                <a href="/cadastroTipoDeServico"><button class="btn btn-large btn-primary">Cadastrar</button></a>
            </div>
        </div>
    </div>
</main>

</body>
</html>