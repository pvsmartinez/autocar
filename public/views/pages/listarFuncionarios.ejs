<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
<header>
    <% include ../partials/header %>
</header>
<main>
    <div class="row">
        <div class="col-xs-2 col-sm-4 col-md-10">
            <h2>Lista de Funcionários AutoCar</h2>
        </div>
    </div>
    <div class="tabela-funcionarios">
        <div class="row">
            <div class="col-xs-2 col-sm-4 col-md-10">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Função</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Ação</th>
                    </tr>
                    </thead>
                    <% if (locals.erro) {
                    %>
                    <%= locals.erro %>
                    <%
                    }
                    else {

                            locals.funcs.forEach(function(func) {
                        switch (func.permissao) {
                            case 1:
                                func.funcao = 'Atendente';
                                break;
                            case 2:
                                func.funcao = 'Técnico';
                                break;
                            case 3:
                                func.funcao = 'Mecânico';
                                break;
                        }
                    %>

                    <tr>
                        <th><a href="/detalheFuncionario?id=<%= func.id %>"><%= func.nome %></a></th>
                        <th><%= func.funcao %></th>
                        <th><%= func.email %></th>
                        <th><%= func.telefone %></th>
                        <th><a href="/editarFuncionario?id=<%= func.id %>">Editar</a>
                    </tr>

                    <%
                    });
                    }
                    %>
                </table>
            </div>
        </div>
    </div>
</main>

</body>
</html>