<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
<header>
    <% include ../partials/header %>
</header>
<main>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <form class="form-signin" method="post" action="/cadastroFuncionario">
                <!--<form class="form-signin" method="post" action="/signUp">-->
                    <input type="text" class="form-control" placeholder="Nome" name="nome" required autofocus>
                    <!--<input type="password" class="form-control" placeholder="Telefone" name="telefone" required>-->
                    <br>
                    <input type="text" class="form-control" placeholder="E-mail" name="email" required>
                    <br>
                    <input type="password" class="form-control" placeholder="Senha" name="senha" required>
                    <br>
                    <input type="text" class="form-control" placeholder="Telefone" name="telefone" required>
                    <br>
                    <input type="text" class="form-control" placeholder="Endereço" name="endereco" required>
                    <br>
                    <select class="form-control" name="tipo">
                    	<option value="3">Mecânico</option>
                    	<option value="2">Técnico</option>
                    	<option value="1">Atendente</option>
                    </select>
                    <br>
                    <select class="form-control" name="especialidade">
                    	<% locals.especialidades.forEach(function(entry) {
                    		%>
                    		<option value="<%=entry.id%>"><%=entry.nome%></option>
                    		<%
                    	}); %>
                    </select>	
                    <br>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Cadastrar
                    </button>
                </form>
                <%if (locals.query.err) { %>
                    <div><%=locals.query.err == 1062? 'Email já cadastrado.' : 'Ocorreu um erro inesperado.' %></div>
                <%}%>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript">
	$('select[name=tipo]').change(function () {
		console.log($(this));
		if ($(this).val() != 3) {
			$('select[name=especialidade').hide();
		} else {
			$('select[name=especialidade').show();
		}
	});
</script>
</body>
</html>