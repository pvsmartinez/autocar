<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
<header>
    <% include ../partials/header %>
</header>
<main>
    <div class="row">
        <div class="col-xs-2 col-sm-4 col-md-10">
            <h2>Lista de Ordens de Serviço</h2>
        </div>
    </div>
    <div class="tabela-funcionarios">
        <div class="row">
            <div class="col-xs-2 col-sm-4 col-md-10">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Equipe</th>
                        <th>Automóvel</th>
                        <th>Horário</th>
                        <th>Preço</th>
                        <th>Tipo</th>
                        <th>Situação</th>
                        <th>Opções</th>
                    </tr>
                    </thead>
                    <% orders.forEach(function(os){%>
                        <tr>
                            <%
                                hora = os.horario.getDate() +'/'+ ("0" + (os.horario.getMonth() + 1)).slice(-2) +'/'+os.horario.getFullYear();
                                switch(os.status) {
                                    case 0:
                                        status = 'CRIADO'
                                        break;
                                    case 1:
                                        status = 'AUTORIZADO'
                                        break;
                                    case 2:
                                        status = 'SUSPENSO'
                                        break;
                                    case 3:
                                        status = 'CANCELADO'
                                        break;
                                    case 4:
                                        status = 'CONCLUIDO'
                                        break;
                                    default:
                                        status = 'ERROR'
                                }
                             %>
                            <td><%= os.nome %></td>
                            <td><%= os.placa %></td>
                            <td><%= hora %></td>
                            <td>R$ <%= os.preco.toFixed(2) %></td>
                            <td><%= os.tipo == 1? 'revisão' : 'normal' %></td>
                            <td><%= status %></td>
                            <td>
                                <a href="/os/detalhes/<%= os.id %>">
                                    <i class="fa fa-wrench" data-toggle="tooltip" title="Detalhes"></i>
                                </a>
                                <a href="/os/feito/<%= os.id %>">
                                    <i class="fa fa-check" data-toggle="tooltip" title="Feito"></i>
                                </a>
                            </td>
                        </tr>
                    <%})%>
                </table>
                <% if (!todos && user.permissao == 4) {%>
                <a href="/os/todos">
                    <button class="btn">Listar Todos</button>
                </a>
                <% } else if (todos) {%>
                <a href="/os">
                    <button class="btn">Ocultar Antigos/Cancelados/Concluídos</button>
                </a>
                <% } %>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip(); 
        });
    </script>
</main>
<footer>
    <% include ../partials/footer %>
</footer>
</body>
</html>
